@model IEnumerable<BloodBank.Models.Donor>

@{
    ViewBag.Title = "Index2";
}

<h2>List of Current Donors</h2>
<div class="Listed">

    <a href="@Url.Action("Create", "Donors")">
        Add Donor
    </a>
    <br />
    @foreach (var item in Model)
    {
        <p>
            @item.DonorName - @item.DonorBloodGroup
        </p>
        <a href="@Url.Action("Information", "Donors", new {id = item.DonorID})">Donor Information</a>
        <a href="@Url.Action("Edit", "Donors", new {id = item.DonorID})">
            Edit
        </a>
        <a href="@Url.Action("Delete", "Donors", new {id = item.DonorID})">
            Delete
        </a>
        <br />
    }
</div>
